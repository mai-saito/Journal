<%- include('partials/header') %>

	<main class="author">
		<div class="media mb-5">
			<img src="uploads/<%= author.avatar %>" class="circled-image mr-3" alt="avatar">
			<h1><%= author.displayName %>の記事</h1>
		</div>
		<section class="row">
			<% author.posts.forEach(function(post) { %>
				<section class="col-sm-4 col-lg-3">
					<div class="card">
						<div class="card-body">
							<h1 class="card-title mb-1">
								<a href="/posts/<%= post.title %>">
									<%= post.title %>
								</a>
							</h1>
							<p><%= post.created %></p>
							<p class="card-text">
								<%= post.content.substring(0, 100) %>
							</p>
							<a href="/posts/<%= post.title %>" class="btn btn-primary">記事を読む</a>
						</div>
					</div>
				</section>
				<% }) %>
		</section>
	</main>

	<%- include('partials/footer') %>